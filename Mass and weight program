#include <iostream>
using namespace std;

int main()
{
    double mass, weight;
    
    cout << "Please inset mass in kilogramss..." << endl;
    cin >> mass;
    
    weight = mass * 9.8;
    
     cout << "it is " << weight << " in newtons." << endl;
    
    if (weight > 1000){
        cout << "Sorry, it's too heavy. Must be under 103kg." << endl;
    } else if (weight < 10){
     cout << "Sorry, it's t0o light. Must be over 1.02kg." << endl;
    }
    
    return 0;
}
